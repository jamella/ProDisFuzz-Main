<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:pdf="http://prodisfuzz.net"
           xmlns:sig="http://www.w3.org/2000/09/xmldsig#" targetNamespace="http://prodisfuzz.net"
           elementFormDefault="qualified">
    <xs:import namespace="http://www.w3.org/2000/09/xmldsig#" schemaLocation="xmldsig-core-schema.xsd" />
    <xs:element name="update" type="pdf:updateType" />

    <xs:complexType name="updateType">
        <xs:sequence>
            <xs:element name="release" type="pdf:releaseType" minOccurs="1" maxOccurs="unbounded" />
            <xs:element ref="sig:Signature" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="releaseType">
        <xs:sequence>
            <xs:element name="number" type="xs:int" />
            <xs:element name="name" type="xs:string" />
            <xs:element name="date" type="xs:date" />
            <xs:element name="requirements" type="xs:string" />
            <xs:element name="information" type="pdf:informationType" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="informationType">
        <xs:sequence minOccurs="1" maxOccurs="unbounded">
            <xs:element name="item" type="xs:string" />
        </xs:sequence>
    </xs:complexType>
</xs:schema>
