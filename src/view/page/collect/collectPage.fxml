<?import javafx.scene.control.*?><?import javafx.scene.layout.*?><?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.GridPane" hgap="5.0" vgap="5.0">
    <children>
        <GridPane hgap="5.0" vgap="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <Label text="Folder:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="folderTextField" editable="false" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                       GridPane.rowIndex="0" />
            <Button fx:id="browseButton" onAction="#browse" text="Browse â€¦" GridPane.columnIndex="2"
                    GridPane.rowIndex="0" />
        </GridPane>
        <TableView fx:id="filesTableView" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
            <columnResizePolicy>
                <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn text="Use" fx:id="columnUse" />
                <TableColumn text="File Name" fx:id="columnFileName" />
                <TableColumn text="Last Modified" fx:id="columnLastModified" />
                <TableColumn text="Size in KB" fx:id="columnSize" />
                <TableColumn text="SHA-256" fx:id="columnSHA256" />
            </columns>
        </TableView>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="25" vgrow="NEVER" />
        <RowConstraints percentHeight="75" vgrow="ALWAYS" />
    </rowConstraints>
    <stylesheets>
        <URL value="@collectPage.css" />
    </stylesheets>
</fx:root>
